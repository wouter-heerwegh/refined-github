{
	"name": "Topic filtering",
	"version": "2.0.0",
	"description": "Adds the ability to properly use topics with buttons",
	"homepage_url": "https://github.com/wouter-heerwegh/refined-github",
	"manifest_version": 2,
	"minimum_chrome_version": "88",
	"applications": {
		"gecko": {
			"id": "{a4c4eda4-fb84-4a84-b4a1-f7c1cbf2a1ad}",
			"strict_min_version": "84.0"
		}
	},
	"permissions": [
		"storage",
		"contextMenus",
		"activeTab",
		"alarms",
		"https://github.com/*",
		"https://api.github.com/*"
	],
	"browser_action": {
		"default_icon": "icon.png"
	},
	"optional_permissions": [
		"*://*/*"
	],
	"icons": {
		"128": "icon.png"
	},
	"options_ui": {
		"chrome_style": true,
		"page": "options.html"
	},
	"background": {
		"persistent": false,
		"scripts": [
			"background.js"
		]
	},
	"content_scripts": [
		{
			"run_at": "document_start",
			"matches": [
				"https://github.com/*",
				"https://gist.github.com/*"
			],
			"exclude_matches": [
				"https://*/login/*"
			],
			"css": [
				"refined-github.css"
			],
			"js": [
				"refined-github.js"
			]
		}
	],
	"web_accessible_resources": [
		"resolve-conflicts.js"
	]
}
